<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp3"
    tools:context=".Activity2">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_siguiente"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <Button
        android:id="@+id/btnAudio1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@drawable/bordes_redondos"
        android:text="Happy-hippo"
        app:layout_constraintEnd_toEndOf="@+id/btnAudio3"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="@+id/btnAudio3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAudio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_redondos"
        android:text="Aña"
        app:layout_constraintEnd_toEndOf="@+id/btnAudio5"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/btnAudio5"
        app:layout_constraintTop_toBottomOf="@+id/btnAudio1" />

    <Button
        android:id="@+id/btnAudio5"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondos"
        android:text="No es gracioso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAudio6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAudio3"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/btnAudio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@drawable/bordes_redondos"
        android:text="Calla"
        app:layout_constraintEnd_toEndOf="@+id/btnAudio4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnAudio4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAudio4"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_redondos"
        android:text="Ni de coña"
        app:layout_constraintEnd_toEndOf="@+id/btnAudio6"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="@+id/btnAudio6"
        app:layout_constraintTop_toBottomOf="@+id/btnAudio2" />

    <Button
        android:id="@+id/btnAudio6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:background="@drawable/bordes_redondos"
        android:text="callado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAudio4"
        app:layout_constraintVertical_bias="0.118" />
</androidx.constraintlayout.widget.ConstraintLayout>